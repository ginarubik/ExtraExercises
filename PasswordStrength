import java.util.Scanner;

public class PasswordStrength {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Jelszó: ");
        String password = scanner.nextLine();

        boolean hasUpper = false;
        boolean hasLower = false;
        boolean hasDigit = false;

        // Karakterek vizsgálata
        for (int i = 0; i < password.length(); i++) {
            char c = password.charAt(i);

            if (Character.isUpperCase(c)) {
                hasUpper = true;
            }
            if (Character.isLowerCase(c)) {
                hasLower = true;
            }
            if (Character.isDigit(c)) {
                hasDigit = true;
            }
        }

        System.out.println("Tartalmaz nagybetűt: " + (hasUpper ? "igen" : "nem"));
        System.out.println("Tartalmaz kisbetűt: " + (hasLower ? "igen" : "nem"));
        System.out.println("Tartalmaz számot: " + (hasDigit ? "igen" : "nem"));

        if (hasUpper && hasLower && hasDigit) {
            System.out.println("Erős jelszó!");
        } else {
            System.out.println("Gyenge jelszó.");
        }
    }
}
